<%= link_to 'New Lab Test', new_lab_test_path %>

<div clss="columns is-centered is-vcentered">
  <div class="column is-6">
    <div class="panel is-link">
    <table class="table">
        <thead class="panel-heading has-text-centered">
          <tr>
            <th>Title</th>
            <th>Price per unit</th>
            <th>Created by</th>
            <th>Department for test</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody class="panel-body">
          <% @lab_tests.each do |lab_test| %>
            <tr>
              <td><%= lab_test.title %></td>
              <td><%= lab_test.price_per_unit %></td>
              <td><%= lab_test.user.username %></td>
              <td><%= lab_test.department_for_test.title %></td>
              <td><%= link_to 'Show', lab_test %></td>
              <td><%= link_to 'Edit', edit_lab_test_path(lab_test) %></td>
              <td><%= link_to 'Destroy', lab_test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>