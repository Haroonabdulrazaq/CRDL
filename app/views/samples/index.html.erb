<% content_for :title do %>
    Central Research & Diagnostics Lab &ndash;<%=DateTime.now.to_s(:nice_date)%> 
<%end%>
<div class="columns mt-4">
    <div class="column is-3">
    <%= form_for "", url: samples_path, role: "search", method: :get  do   %>
        <%= text_field_tag :search, @search_term, placeholder: "...Search by name", class: "input is-4"%>
    <%end%>
    </div>
 </div>
<div class="columns mt-6 is-centered is-multiline is-mobile">
<% @samples.each do |sample|%>
        <div class="column is-3">
            <div class="card">
                <header class="card-header"> 
                <%= link_to sample_path(sample) , class:"card-header-title is-link" do %> 
                    <strong class="has-text-centered" >Sample: <%=sample.id%> </strong>                
                <% end %>
                </header>
                <div class="card-content">  
                    <div class="content">
                        <p> 
                            <span class="has-text-weight-bold"> Name:  </span><%= sample.name%>
                        <p>
                        <p> 
                            <span class="has-text-weight-bold"> Description:  </span><%= sample.description%>
                        <p>
                        <p> 
                            <span class="has-text-weight-bold"> Perishable: </span> <%= sample.perishable%>
                        <p>
                        <p> 
                            <span class="has-text-weight-bold"> Current Status: </span> <%= sample.current_status%>
                        <p>
                        <p class="italics has-text-link"> Created: <%= time_ago_in_words(sample.created_at) %> ago </p>
                    </div>
                </div>

                <div class="card-footer">    
                        <%= link_to 'Preview', sample_path(sample), class: "button is-link is-outlined card-footer-item has-text-centered" %>
                </div>
            </div>     
        </div>
    <% end %>
</div>
