<%= form_with(model: result_mail, local: true) do |form| %>
  <% if result_mail.errors.any? %>
    <div class="message is-danger">
      <div class="message-header">
        <p>
          <%= pluralize(result_mail.errors.count, "error") %> prohibited this result_mail from being saved:
        </p>
      </div>
      <div class="message-body">
        <ul>
          <% result_mail.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :recipient_email, 'Select recipient' %>
    <%= form.select :recipient_email, options_for_select(@email_recipient_select) %>
  </div>

  <div class="field">
    <%= form.label :result_id, 'Select result' %>
    <%= form.select :result_id, options_for_select(@result_select) %>
  </div>

  <div class="field">
    <%= form.label :email_object %>
    <%= form.text_field :email_object %>
  </div>

  <div class="field">
    <%= form.label :email_message %>
    <%= form.text_area :email_message %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
