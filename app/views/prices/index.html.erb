<p id="notice"><%= notice %></p>

<h1>Prices</h1>

<table>
  <thead>
    <tr>
      <th>Sample</th>
      <th>Lab test</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sample_prices.each do |price| %>
      <tr>
        <td><%= price.sample.name %></td>
        <td><%= price.lab_test_id %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

